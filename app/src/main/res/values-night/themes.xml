<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExpiryTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="materialButtonStyle">@style/mySolidButton</item>
        <item name="extendedFloatingActionButtonStyle">@style/myExtendedFloatingButton</item>
        <item name="chipStyle">@style/myChoiceChipTheme</item>
        <item name="imageButtonStyle">@style/myImageButtonStyle</item>
        <item name="android:textViewStyle">@style/myTextStyle</item>
        <item name="materialCardViewStyle">@style/myCardViewStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myCardViewStyle" parent="Widget.MaterialComponents.CardView">
             <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/text_dialog_color</item>
        <item name="checkedIconTint">@color/text_color</item>
        <item name="strokeColor">@color/stroke_color</item>
    </style>

    <style name="myTextStyle" parent="Widget.MaterialComponents.TextView">
            <item name="fontFamily">@font/montserrat</item>
            <item name="android:letterSpacing">0.05</item>
            <item name="android:lineSpacingExtra">5dp</item>
            <item name="android:textColor">@color/text_dialog_color</item>
            <item name="android:textSize">15sp</item>
    </style>


    <style name="myImageButtonStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
           <item name="tint">@color/text_dialog_color</item>
            <item name="android:padding">6dp</item>
            <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="mySolidButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">40sp</item>
        <item name="android:textColor">@color/always_white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">60dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="myExtendedFloatingButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="cornerRadius">40sp</item>
        <item name="android:textColor">@color/always_white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">40dp</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="myChoiceChipTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipMinHeight">25dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="checkedIcon">@drawable/check_circle_24</item>
        <item name="checkedIconTint">@color/always_white</item>
        <item name="android:textColor">@color/always_white</item>
        <item name="chipBackgroundColor">@color/window_top_bar</item>
        <item name="android:textAppearance">@style/textStyleForChip</item>
    </style>

    <style name="textStyleForChip" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="themeOverlayPeach" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/text_color</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
    </style>

    <style name="normalRoboto14Regular" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="montserrat_text_color" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="datePickerTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/text_dialog_color</item>
        <item name="colorOnPrimary">@color/main_background</item>
        <item name="colorSurface">@color/main_background</item>
        <item name="android:headerMonthTextAppearance">@style/Theme.ExpiryTracker</item>
        <item name="android:headerDayOfMonthTextAppearance">@style/Theme.ExpiryTracker</item>
        <item name="android:headerYearTextAppearance">@style/Theme.ExpiryTracker</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@anim/fade_in_second</item>
        <item name="android:windowExitAnimation">@anim/fade_out_in_second</item>
    </style>

</resources>