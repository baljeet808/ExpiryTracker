<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/dashFragment">
    <fragment
        android:id="@+id/dashFragment"
        android:name="com.baljeet.expirytracker.fragment.dash.DashFragment"
        android:label="fragment_dash"
        tools:layout="@layout/fragment_dash" >
        <action
            android:id="@+id/action_dashFragment_to_addProduct"
            app:destination="@id/addProduct"
            app:enterAnim="@anim/slide_up_from_bottom"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@anim/slide_down_from_bottom" />
    </fragment>
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.baljeet.expirytracker.fragment.calendar.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.baljeet.expirytracker.fragment.settings.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/analytics"
        android:name="com.baljeet.expirytracker.fragment.analytics.Analytics"
        android:label="fragment_analytics"
        tools:layout="@layout/fragment_analytics" />
    <fragment
        android:id="@+id/addProduct"
        android:name="com.baljeet.expirytracker.fragment.product.AddProduct"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" />
</navigation>