<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_margin="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/card_background">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/text_color"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/option_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:riv_corner_radius="2dp"
                android:padding="2dp"
                android:src="@drawable/drinks"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/image" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/product_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Rustic Pineapple is very amazing"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/image_card"
        app:layout_constraintTop_toTopOf="@id/image_card"
        app:layout_constraintBottom_toBottomOf="@id/image_card"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/reminder_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="27 JUN. 2022  8:15 AM"
        app:layout_constraintTop_toTopOf="@id/image_card"
        app:layout_constraintBottom_toBottomOf="@id/image_card"
        app:layout_constraintStart_toEndOf="@id/product_name"
        app:layout_constraintEnd_toStartOf="@id/edit_button"
        android:textSize="11sp"
        android:layout_marginStart="15dp"
        android:textColor="@color/text_color"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_button"
        android:layout_width="30dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@id/reminder_date_time"
        app:layout_constraintEnd_toStartOf="@id/all_notification_toggle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="15dp"
        android:padding="3dp"
        android:elevation="5dp"
        android:src="@drawable/ic_edit"
        android:scaleType="fitXY"
        app:tint="?attr/card_background"
        android:backgroundTint="?attr/text_dialog_color"
        android:background="@drawable/top_round_bg"
        />


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/all_notification_toggle"
        android:layout_width="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:text="@null"
        app:layout_constraintStart_toEndOf="@id/edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    

</androidx.constraintlayout.widget.ConstraintLayout>