<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/main_background"
    tools:context=".fragment.shared.TrackerDetails">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:rotation="-90"
        android:src="@drawable/ic_arrow_left_32"
        app:layout_constraintEnd_toEndOf="@id/guideline_left"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tracker_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="@string/tracking_detail"
        android:textColor="@color/text_color"
        android:textSize="18sp"
        android:textStyle="bold"
        app:drawableEndCompat="@drawable/et_logo_48"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toEndOf="@id/back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tracker_heading">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/top_round_bg"
                android:elevation="5dp"
                android:padding="10dp"
                android:minHeight="120dp"
                app:layout_constraintStart_toEndOf="@id/guideline_inner_left"
                app:layout_constraintEnd_toStartOf="@id/guideline_mid"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/image_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/product_name"
                    android:layout_marginStart="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/text_color"
                    app:strokeWidth="1dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/option_image"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:contentDescription="@string/image"
                            android:padding="12dp"
                            android:src="@drawable/drinks"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:riv_corner_radius="12dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lineHeight="28dp"
                    android:maxWidth="180dp"
                    android:maxLines="2"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_2"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Terminator movies" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="25dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/timer_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:animateLayoutChanges="true"
                android:background="@drawable/top_round_bg"
                android:elevation="5dp"
                android:minHeight="120dp"
                app:layout_constraintStart_toEndOf="@id/guideline_inner_left"
                app:layout_constraintEnd_toStartOf="@id/guideline_mid"
                app:layout_constraintTop_toBottomOf="@id/image_layout"
                >

                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:paddingStart="0dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="10dp"
                    android:textAllCaps="true"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="2 Years \n1 Month \n15 Days" />

                <TextView
                    android:id="@+id/timer_label"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/expiring_after"
                    android:textSize="18sp"
                    android:gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_12"
                    app:layout_constraintEnd_toStartOf="@id/time_left"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="38dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/detail_layout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:animateLayoutChanges="true"
                android:minWidth="300dp"
                android:background="@drawable/top_round_bg"
                android:elevation="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_inner_right"
                app:layout_constraintBottom_toBottomOf="@id/timer_layout"
                >

                <TextView
                    android:id="@+id/category_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category_name"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/guideline_21"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:letterSpacing="0.035"
                    />

                <TextView
                    android:id="@+id/category_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Beverages"
                    android:textSize="20sp"
                    android:letterSpacing="0.04"
                    app:layout_constraintTop_toBottomOf="@id/category_label"
                    app:layout_constraintStart_toEndOf="@id/guideline_21"
                    app:layout_constraintEnd_toStartOf="@id/guideline_41"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="10dp"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/category_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/image"
                    android:elevation="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_passion_fruit"
                    app:layout_constraintEnd_toEndOf="@id/guideline_41"
                    app:layout_constraintHorizontal_bias=".7"
                    app:layout_constraintStart_toEndOf="@id/category_label"
                    app:layout_constraintTop_toTopOf="@id/category_label"
                    app:layout_constraintBottom_toBottomOf="@id/category_label"
                    app:shapeAppearance="@style/circular"
                    app:strokeColor="?text_dialog_color"
                    app:strokeWidth="1dp" />

                <TextView
                    android:id="@+id/expiry_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expiry_date"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/guideline_21"
                    app:layout_constraintTop_toBottomOf="@id/category_name_value"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:letterSpacing="0.035"
                    />

                <TextView
                    android:id="@+id/expiry_date_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="@string/date_sample"
                    android:textSize="20sp"
                    android:letterSpacing="0.04"
                    app:layout_constraintTop_toBottomOf="@id/expiry_label"
                    app:layout_constraintStart_toEndOf="@id/guideline_21"
                    app:layout_constraintEnd_toStartOf="@id/guideline_41"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/manufacture_date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manufactured_date"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/guideline_21"
                    app:layout_constraintTop_toBottomOf="@id/expiry_date_value"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:letterSpacing="0.035"
                    />

                <TextView
                    android:id="@+id/manufacture_date_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="@string/date_sample"
                    android:textSize="20sp"
                    android:letterSpacing="0.04"
                    app:layout_constraintTop_toBottomOf="@id/manufacture_date_label"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintStart_toEndOf="@id/guideline_21"
                    app:layout_constraintEnd_toStartOf="@id/guideline_41"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="10dp"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_inner_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/item_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:indeterminate="false"
        android:progress="20"
        android:progressDrawable="@drawable/ob_round_background"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/status_text"
        />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/item_progressbar"
        app:layout_constraintTop_toTopOf="@id/tracker_heading"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/expiring"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineHeight="30dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06" />

</androidx.constraintlayout.widget.ConstraintLayout>