<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="?attr/text_dialog_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:animateLayoutChanges="true"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="@string/select_an_option"
            android:textColor="@color/main_background"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:background="@drawable/ripple_bg_bottom_sheet_option"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:id="@+id/upload_btn"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/upload_from_gallery"
            android:textColor="@color/main_background"
            android:visibility="visible"
            tools:visibility="visible"
            app:drawableStartCompat="@drawable/perm_media_24"
            app:drawableTint="@color/main_background"
            app:layout_constraintEnd_toStartOf="@id/guideline4"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/title" />


        <TextView
            android:background="@drawable/ripple_bg_bottom_sheet_option"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:id="@+id/camera_btn"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/use_camera"
            android:textColor="@color/main_background"
            android:visibility="visible"
            tools:visibility="visible"
            app:drawableStartCompat="@drawable/ic_baseline_camera_alt_24"
            app:drawableTint="@color/main_background"
            app:layout_constraintEnd_toStartOf="@id/guideline4"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/upload_btn" />


        <TextView
            android:background="@drawable/ripple_bg_bottom_sheet_option"
            android:drawablePadding="30dp"
            android:gravity="center_vertical"
            android:id="@+id/icons_btn"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:text="@string/use_icon_gallery"
            android:textColor="@color/main_background"
            android:visibility="visible"
            tools:visibility="visible"
            app:drawableStartCompat="@drawable/ic_baseline_insert_emoticon_24"
            app:drawableTint="@color/main_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline4"
            app:layout_constraintStart_toEndOf="@id/guideline2"
            app:layout_constraintTop_toBottomOf="@id/camera_btn"
            app:layout_constraintVertical_bias="0" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
