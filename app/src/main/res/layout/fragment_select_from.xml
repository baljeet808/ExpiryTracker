<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/main_background"
    tools:context=".fragment.shared.SelectFrom">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.12"
        android:text="@string/choose_a_category"
        android:textAllCaps="false"
        android:textAppearance="@style/normalRoboto14Regular"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/completed_check"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/check_circle_24"
        android:layout_marginStart="15dp"
        app:tint="@color/text_dialog_color"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/title_text"
        app:layout_constraintTop_toTopOf="@id/title_text"
        app:layout_constraintBottom_toBottomOf="@id/title_text"
        />

    <View
        android:id="@+id/underline_view"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:background="@color/window_top_bar"
        app:layout_constraintEnd_toEndOf="@id/title_text"
        app:layout_constraintStart_toStartOf="@id/title_text"
        app:layout_constraintTop_toBottomOf="@id/title_text" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_box_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/main_background"
        android:hint="@string/product_category"
        android:textColorHint="@color/text_dialog_color"
        app:endIconMode="clear_text"
        app:endIconTint="@color/theme_peach_light"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/title_text">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/normalRoboto14Regular"
            android:textColor="@color/text_dialog_color"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/selected_category_icon"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/liquor"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/custom_box_layout"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintTop_toTopOf="@id/custom_box_layout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/main_background"
        app:layout_constraintEnd_toStartOf="@id/guideline3"
        app:layout_constraintStart_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/custom_box_layout">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/options_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/list_layout">

        <TextView
            android:id="@+id/title_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="0.12"
            android:text="@string/_2_product_name"
            android:textAllCaps="false"
            android:textAppearance="@style/normalRoboto14Regular"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/guideline5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/completed2_check"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/check_circle_24"
            android:layout_marginStart="15dp"
            app:tint="@color/text_dialog_color"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/title_name_text"
            app:layout_constraintTop_toTopOf="@id/title_name_text"
            app:layout_constraintBottom_toBottomOf="@id/title_name_text"
            />
        <View
            android:id="@+id/underline2_view"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:background="@color/window_top_bar"
            app:layout_constraintEnd_toEndOf="@id/title_name_text"
            app:layout_constraintStart_toStartOf="@id/title_name_text"
            app:layout_constraintTop_toBottomOf="@id/title_name_text" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/custom_name_box_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/main_background"
            android:hint="@string/product_name"
            android:textColorHint="@color/text_dialog_color"
            app:endIconMode="clear_text"
            app:endIconTint="@color/theme_peach_light"
            app:layout_constraintEnd_toStartOf="@id/guideline6"
            app:layout_constraintStart_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/title_name_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/custom_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/normalRoboto14Regular"
                android:textColor="@color/text_dialog_color"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/name_options_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toStartOf="@id/guideline6"
            app:layout_constraintStart_toEndOf="@id/guideline5"
            app:layout_constraintTop_toBottomOf="@id/custom_name_box_layout" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/selected_name_icon"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/liquor"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/custom_name_box_layout"
            app:layout_constraintEnd_toStartOf="@id/guideline6"
            app:layout_constraintTop_toTopOf="@id/custom_name_box_layout" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>