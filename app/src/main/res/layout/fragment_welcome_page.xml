<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".fragment.onboarding.WelcomePage">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.05"
        android:text="@string/welcome_aboard"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/guideline_top" />

    <androidx.appcompat.widget.AppCompatRadioButton
        android:id="@+id/first_point_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/ic_fav_outline"
        android:buttonTint="@color/text_color"
        android:padding="2dp"
        android:visibility="visible"
        tools:visibility="visible"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/welcome_text"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/first_point_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/first_point_star"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintTop_toTopOf="@id/first_point_star"
        app:layout_constraintBottom_toBottomOf="@id/first_point_star"
        android:text="Track expiration of any kind of product"
        android:textSize="14sp"
        android:textStyle="bold"
        app:fontFamily="@font/montserrat_bold"
        android:textColor="@color/text_color"
        />
    <TextView
        android:id="@+id/first_supporting_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Use pre loaded categories and products list"
        app:layout_constraintTop_toBottomOf="@id/first_point_text"
        app:layout_constraintStart_toStartOf="@id/first_point_text"
        app:layout_constraintEnd_toEndOf="@id/first_point_text"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="240dp"
        android:layout_height="260dp"
        app:layout_constraintTop_toBottomOf="@id/first_supporting_text"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/categories_round"
        app:layout_constraintVertical_bias="0.2"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03" />
</androidx.constraintlayout.widget.ConstraintLayout>