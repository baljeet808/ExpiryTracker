<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/main_background">

    <TextView
        android:id="@+id/sr_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/oswald_light"
        android:letterSpacing="0.05"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_color"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/sr_number"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line1"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_color"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_name"/>

    <TextView
        android:id="@+id/product_category"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line2"
        />

    <View
        android:id="@+id/line3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_color"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_category"/>

    <TextView
        android:id="@+id/tracking_result"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line3"
        />
    <View
        android:id="@+id/line4"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_color"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tracking_result"/>




    <TextView
        android:id="@+id/product_expiry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line4"
        />
    <View
        android:id="@+id/line6"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_color"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_expiry"/>

    <TextView
        android:id="@+id/product_mfg"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line6"
        />

    <View
        android:id="@+id/line5"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/text_color"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_mfg"/>

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/text_dialog_color"
        android:fontFamily="@font/montserrat"
        android:letterSpacing="0.05"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/line5"
        />




</androidx.constraintlayout.widget.ConstraintLayout>