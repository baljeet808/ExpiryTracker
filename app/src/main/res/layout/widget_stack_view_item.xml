<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:layout_margin="5dp"
    android:background="@drawable/widget_list_item_bg"
   >

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/image"
        android:src="@drawable/liquor" />


    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:gravity="start"
        android:text="@string/vegetables"
        android:lines="1"
        android:textAllCaps="false"
        android:layout_toStartOf="@id/expiring_date"
        android:layout_toEndOf="@id/product_image"
        android:layout_marginTop="5dp" />


    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@id/expiring_date"
        android:layout_toEndOf="@id/product_image"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:text="@string/still_ok"
        android:textStyle="italic" />



    <TextView
        android:id="@+id/expiring_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="0dp"
        android:padding="0dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/expiring_date_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:padding="0dp"
        android:textSize="14sp"
        android:layout_below="@id/expiring_date"
        />

    <ProgressBar
        android:id="@+id/item_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:indeterminate="false"
        android:progress="20"
        android:progressTint="@color/theme_peach_light"
        android:layout_below="@id/product_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp" />
</RelativeLayout>